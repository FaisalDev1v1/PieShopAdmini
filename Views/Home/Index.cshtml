@model HomeViewModel

<partial name="_Carousel" />


<div class="text-center">
    <img src="Images/blog-logo.png" class="logo-mark mx-auto" />
    <h1>Articles of the week</h1>
    <h5>Enjoy Reading , Learning and Growth  </h5>

    <div class="row pies-of-the-week">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var pie in Model.PiesOfTheWeek)
            {
                <partial name="_PieCard" model="pie" />
            }
        </div>

    </div>
</div>
